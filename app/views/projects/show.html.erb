
<div class="card card-custom" >
<div class="card-body card-body-custom"">
  <h2 class="card-title"><%= @project.project_name.upcase %></h2>
  <p class="card-text"><%= @project.porject_description %></p>
  <span class="date-title">Started On : </span><span class='card-date'><%= @project.starts_on%></span><br/><br/>
  <% if @project.on_progress %>
    <button class="btn btn-success btn-lg">On Progress</button>
    <br/><br/>
  <% else %>
    <button class="btn btn-danger">ENDED</button>
    <br/><br/>
  <% end %>
  <% if current_user.admin %>
    <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-outline-primary btn-sm' %>
  <%end%>
  <%= link_to 'Back', projects_path, class: 'btn btn-outline-secondary btn-sm' %>
</div>
</div>
